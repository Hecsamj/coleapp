<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Matrícula"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:layout_below="@id/tvTitulo"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombres completos"
        android:inputType="textPersonName"
        android:layout_below="@id/etCorreo"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etApellidoPaterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido Paterno"
        android:inputType="textPersonName"
        android:layout_below="@id/etNombre"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etApellidoMaterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido Materno"
        android:inputType="textPersonName"
        android:layout_below="@id/etApellidoPaterno"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etFechaNacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de nacimiento (YYYY-MM-DD)"
        android:inputType="text"
        android:layout_below="@id/etApellidoMaterno"
        android:layout_marginTop="10dp" />

    <Spinner
        android:id="@+id/spNivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etFechaNacimiento"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etGrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grado (ej: 1ro, 2do)"
        android:inputType="text"
        android:layout_below="@id/spNivel"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etColegioProcedencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Colegio de procedencia (Opcional)"
        android:inputType="text"
        android:layout_below="@id/etGrado"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etFotoUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL de la foto del estudiante"
        android:inputType="textUri"
        android:layout_below="@id/etColegioProcedencia"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/ivFotoEstudiante"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_foto"
        android:layout_below="@id/etFotoUrl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/skyblue"
        android:text="Registrar Matrícula"
        android:layout_below="@id/ivFotoEstudiante"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="Volver al menú"
        android:layout_below="@id/btnRegistrar"
        android:layout_marginTop="16dp" />

</RelativeLayout>
